{
  "ConnectionStrings": {
    "ApiDbConnection": "Server=localhost;Database=api.meespostma.nl;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ]
  },
  "JwtSettings": {
    "Issuer": "ApiMeesPostma",
    "Audience": "WebMeesPostma",
    "Duration": 3
  },
  "AllowedHosts": "*"
}
